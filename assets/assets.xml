<?xml version="1.0" encoding="UTF-8" ?>

<!-- platformer assets -->

<objects>
	
	<include url="assets/freshscene2d_assets.xml" subsume-root="true" />
	<include url="assets/freshgame_assets.xml" subsume-root="true" />
	
	<!-- Fonts and textures -->
	
	<object class="FontLoaderConfigured" name="pixelberry8">
		<fontMetricsFilePath>pixelberry8.fontmap</fontMetricsFilePath>
	</object>
	<object class="TextureLoaderConfigured" name="pixelberry8">
		<basePath>assets/font</basePath>
		<filePath>pixelberry8</filePath>
	</object>

	<object class="FontLoaderConfigured" name="uni05_53_8">
		<fontMetricsFilePath>uni05_53_8.fontmap</fontMetricsFilePath>
	</object>
	<object class="TextureLoaderConfigured" name="uni05_53_8">
		<basePath>assets/font</basePath>
		<filePath>uni05_53_8</filePath>
	</object>
	
	<object class="TextureLoaderConfigured" name="tile_atlas">
		<extension>jpg</extension>
	</object>
		
	<object class="TextureLoaderConfigured" name="light_glow">
		<filePath>glow_white_noalpha32</filePath>
		<filterMode>Bilinear</filterMode>
	</object>
	
	<object class="TextureLoaderConfigured" name="ui_button_drop"><filterMode>Trilinear</filterMode></object>
	<object class="TextureLoaderConfigured" name="ui_button_take"><filterMode>Trilinear</filterMode></object>
	<object class="TextureLoaderConfigured" name="ui_button_use"><filterMode>Trilinear</filterMode></object>
	<object class="TextureLoaderConfigured" name="ui_button_keyhint_z"><filterMode>Trilinear</filterMode></object>
	<object class="TextureLoaderConfigured" name="ui_button_keyhint_x"><filterMode>Trilinear</filterMode></object>
	<object class="TextureLoaderConfigured" name="ui_button_keyhint_c"><filterMode>Trilinear</filterMode></object>
	<object class="TextureLoaderConfigured" name="ui_hint_goal"><filterMode>Trilinear</filterMode></object>
	<object class="TextureLoaderConfigured" name="ui_hint_movement"><filterMode>Trilinear</filterMode></object>
	<object class="TextureLoaderConfigured" name="ui_survived"><filterMode>Trilinear</filterMode></object>

	<object class="TextureLoaderConfigured" name="level001">
		<basePath>assets/lvl/</basePath>
		<extension>png</extension>
		<doMipMap>false</doMipMap>
		<retainTexelData>true</retainTexelData>
		<filterMode>Nearest</filterMode>
	</object>
	
	<!-- Sounds -->
	
	<object class="AudioCueLoaderConfigured" name="music_theme">
		<maxSimultaneousSounds>1</maxSimultaneousSounds>
		<doLoop>true</doLoop>
	</object>
	
	<object class="AudioCueLoaderConfigured" name="alert01"><rangeGain>0.25</rangeGain></object>
	<object class="AudioCueLoaderConfigured" name="torch_fizzle"><rangePitch>(0.9,1.1)</rangePitch></object>
	<object class="AudioCueLoaderConfigured" name="monster_scratch01"><rangeGain>0.25</rangeGain><rangePitch>(0.75,1.25)</rangePitch></object>
	<object class="AudioCueLoaderConfigured" name="human_scratch01"><rangeGain>0.25</rangeGain><rangePitch>(0.75,1.25)</rangePitch></object>
	<object class="AudioCueLoaderConfigured" name="troll_step01"><rangeGain>0.25,0.3</rangeGain><rangePitch>(0.75,1.25)</rangePitch></object>
	<object class="AudioCueLoaderConfigured" name="troll_step02"><rangeGain>0.1,0.15</rangeGain><rangePitch>(0.75,1.25)</rangePitch></object>
	
	<!-- Shaders -->	

</objects>
