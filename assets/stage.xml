<?xml version="1.0" encoding="UTF-8" ?>

<!-- platformer Normal Stage -->

<objects root="AppStage'theStage'">
		
	<object class="AppStage" name="theStage">
		<stageDimensions>960,0</stageDimensions>

		<children>

			<object class="ldWorld" name="world">
				<position>-480,-320</position>
				<gravity>0</gravity>
				
				<children>

					<object class="TileGridDefault" name="$^_tileGrid">
						
						<creationGridImage>Texture'lvl001'</creationGridImage>

					</object>
					
					<object class="Human" name="player">
						<texture>Texture'white_simple'</texture>
						<color>ff000030</color>
						<position>448,320</position>
						<scale>8</scale>
						<dimensions>15</dimensions>
						
						<groundedDrag>32</groundedDrag>
						<airDrag>32</airDrag>
						<airControl>1</airControl>
						<controllerImpulseScale>4000</controllerImpulseScale>
						<jumpImpulseScale>0</jumpImpulseScale>
						
						<controller><object class="ldPlayerController"></object></controller>
					</object>


					<object class="Monster" name="monster">
						<stepSpeed>4</stepSpeed>
						<grindDamage>1</grindDamage>
						
						<texture>Texture'white_simple'</texture>
						<color>Red</color>
						<position>264,120</position>
						<scale>8</scale>
						<dimensions>15</dimensions>
						
						<groundedDrag>32</groundedDrag>
						<airDrag>32</airDrag>
						<airControl>1</airControl>
						<controllerImpulseScale>4000</controllerImpulseScale>
						<jumpImpulseScale>0</jumpImpulseScale>

						<lightClass>LightTorch</lightClass>
						<lightRadius>100</lightRadius>
						<lightColor>Red</lightColor>
					</object>
					
					<object class="DoorWood" name="$^_door">
						<position>448,240</position>
					</object>

					<object class="DoorIron">
						<position>432,240</position>
					</object>

					<object class="BlockGravel">
						<position>432,272</position>
					</object>

					<object class="Lighting" name="$^_lighting">
						<ambientColor>Black</ambientColor>
						<tileGrid>TileGridDefault'$^^_tileGrid'</tileGrid>
						<children>
							<object class="LightSourceConfigured" name="light_home">
								<position>448,320</position>
								<color>ffffdd80</color>
								<radius>400</radius>
							</object>
							<object class="LightTorch" name="starting_torch">
								<position>448,320</position>
							</object>
						</children>
					</object>
				</children>
				
				<attachments>
					<object class="Attachment">
						<attached>LightTorch'starting_torch'</attached>
						<to>Actor'player'</to>
					</object>
				</attachments>
			</object>

		</children>

	</object>
	
</objects>
