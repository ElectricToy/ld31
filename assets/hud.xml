<?xml version="1.0" encoding="UTF-8" ?>

<!-- ld31 HUD -->

<objects>
	
	<class name="HUDButton" extends="SimpleButton">
		<isDragEnabled>false</isDragEnabled>
		<scale>0.25</scale>
		<passthrough>
			<keyframe label="out"><child name="$1"></child></keyframe>
			<keyframe label="disabled"><child name="$1"><color>80808080</color></child></keyframe>
			<keyframe label="down"><child name="$1"><colorAdditive>00333333</colorAdditive></child></keyframe>
			<keyframe label="up"><child name="$1"></child></keyframe>
		</passthrough>
	</class>

	<class name="KeyHint" extends="Sprite">
		<position>-104,50</position>
	</class>

	<class name="Clock" extends="DisplayObjectContainer">
		<children>
			<object class="Sprite" name="$^_survived">
				<position>0</position>
				<scale>0.25</scale>
				<texture>Texture'ui_survived'</texture>
			</object>
			
			<object class="TextField" name="$^_clocktext">
				<position>0,16</position>
				
				<text>00:00:00</text>
				
				<font>Font'pixelberry8'</font>
				<fontSize>28</fontSize>
				<alignment>Centered</alignment>
				<verticalAlignment>Middle</verticalAlignment>
				<isTouchEnabled>false</isTouchEnabled>
			</object>
			
		</children>
	</class>

	<class name="MessagePopup" extends="UIPopup">
		<isTouchEnabled>false</isTouchEnabled>
		<defaultShowDuration>0.25</defaultShowDuration>
		<defaultHideDuration>6</defaultHideDuration>
		<startHidden>true</startHidden>
		<startBecomeShown>true</startBecomeShown>
		<children>
			<object class="TextField" name="$^_messagetext">
				<font>Font'uni05_53_8'</font>
				<color>ff37b1ff</color>
				<fontSize>28</fontSize>
				<alignment>Centered</alignment>
				<verticalAlignment>Middle</verticalAlignment>
				<isTouchEnabled>false</isTouchEnabled>
			</object>
		</children>
	</class>

	<class name="MonsterMessagePopup" extends="MessagePopup">
		<defaultShowDuration>1</defaultShowDuration>
		<position>0,-16</position>
		<color>ffff1800</color>
		<children>
			<object class="TextField" name="$^_messagetext">
				<font>Font'uni05_53_8'</font>
				<lineHeight>0.6</lineHeight>
				<fontSize>48</fontSize>
				<alignment>Centered</alignment>
				<verticalAlignment>Middle</verticalAlignment>
				<isTouchEnabled>false</isTouchEnabled>
			</object>
		</children>
	</class>

	<class name="PreparationWarning" extends="MonsterMessagePopup">
		<defaultShowDuration>3</defaultShowDuration>
		<position>0,-80</position>
	</class>

	<class name="NewHumanMessagePopup" extends="MonsterMessagePopup">
		<color>Green</color>
	</class>

	<class name="NewWaveMessagePopup" extends="MonsterMessagePopup">
		<defaultShowDuration>4</defaultShowDuration>
		<hiddenTranslation>0,100</hiddenTranslation>
		<position>0,-32</position>
		<color>ff9106d9</color>
		<children>
			<object class="MovieClip" name="$^_pulsar">
				<children>
					<object class="TextField" name="$^_messagetext">
						<font>Font'uni05_53_8'</font>
						<fontSize>80</fontSize>
						<alignment>Centered</alignment>
						<verticalAlignment>Middle</verticalAlignment>
						<isTouchEnabled>false</isTouchEnabled>
					</object>
				</children>
				
				<passthrough>
					<keyframe>
						<child name="$1"><colorAdditive>Black</colorAdditive></child>
						<tween type="SinEaseIn" />
					</keyframe>
					<keyframe rel-s="1">
						<child name="$1"><colorAdditive>White</colorAdditive></child>
						<tween type="SinEaseOut" />
					</keyframe>
					<keyframe rel-s="1">
						<child name="$1"><colorAdditive>Black</colorAdditive></child>
					</keyframe>
				</passthrough>
			</object>
		</children>
	</class>

	<class name="HUDConfigured" extends="HUD">
		<inheritParentFrame>true</inheritParentFrame>
		<children>
			
			<!-- Control buttons -->
			
			<object class="DisplayObjectContainer" name="$^_controls">
				<ignoreFrameAttachment>false</ignoreFrameAttachment>
				<parentFrameAttachPoint>1,1</parentFrameAttachPoint>
				<children>
					
					<object class="HUDButton" name="$^_take">
						<position>0</position>
						<onTapCallee>HUDConfigured'theHud'</onTapCallee>
						<onTapCalleeMethodExpression>onButtonTake</onTapCalleeMethodExpression>
						<children>
							<object class="Sprite">
								<texture>Texture'ui_button_take'</texture>
								<children>
									<object class="KeyHint">
										<texture>Texture'ui_button_keyhint_z'</texture>
									</object>
								</children>
							</object>
						</children>
					</object>
					
					<object class="HUDButton" name="$^_drop">
						<position>0,38</position>
						<onTapCallee>HUDConfigured'theHud'</onTapCallee>
						<onTapCalleeMethodExpression>onButtonDrop</onTapCalleeMethodExpression>
						<children>
							<object class="Sprite">
								<texture>Texture'ui_button_drop'</texture>
								<children>
									<object class="KeyHint">
										<texture>Texture'ui_button_keyhint_x'</texture>
									</object>
								</children>
							</object>
						</children>
					</object>
					
					<object class="HUDButton" name="$^_use">
						<position>0,76</position>
						<onTapCallee>HUDConfigured'theHud'</onTapCallee>
						<onTapCalleeMethodExpression>onButtonUse</onTapCalleeMethodExpression>
						<children>
							<object class="Sprite">
								<texture>Texture'ui_button_use'</texture>
								<children>
									<object class="KeyHint">
										<texture>Texture'ui_button_keyhint_c'</texture>
									</object>
								</children>
							</object>
						</children>
					</object>
				</children>
			</object>
			
			<!-- CLOCK -->
			
			<object class="Clock" name="$^_clock">
				<ignoreFrameAttachment>false</ignoreFrameAttachment>
				<parentFrameAttachPoint>1,1</parentFrameAttachPoint>
			</object>
			
			<object class="DisplayObjectContainer" name="$^_messagehost">
				<ignoreFrameAttachment>false</ignoreFrameAttachment>
				<parentFrameAttachPoint>0,1</parentFrameAttachPoint>
			</object>
			
			<!-- GAME START -->
			
			<object class="UIPopup" name="$^_startup">
				
				<isTouchEnabled>false</isTouchEnabled>
				<defaultShowDuration>0</defaultShowDuration>
				<defaultHideDuration>2</defaultHideDuration>
				<startHidden>false</startHidden>
				<children>
					<object class="MovieClip" name="$^_movement">
						<position>0,-100</position>
						<scale>0.25</scale>
						<children>
							<object class="Sprite">
								<texture>Texture'ui_hint_movement'</texture>
							</object>
						</children>
						
						<passthrough>
							<keyframe>
								<child name="$1"><color>Yellow</color></child>
								<tween type="SinEaseIn" />
							</keyframe>
							<keyframe rel-s="2">
								<child name="$1"><color>Red</color></child>
								<tween type="SinEaseOut" />
							</keyframe>
							<keyframe rel-s="2">
								<child name="$1"><color>Yellow</color></child>
							</keyframe>
						</passthrough>
					</object>
					
					<object class="MovieClip" name="$^_goal">
						<position>0,104</position>
						<scale>0.25</scale>
						<children>
							<object class="Sprite">
								<texture>Texture'ui_hint_goal'</texture>
							</object>
						</children>
						
						<passthrough>
							<keyframe>
								<child name="$1"><color>Blue</color></child>
								<tween type="Linear" />
							</keyframe>
							<keyframe rel-s="1.3">
								<child name="$1"><color>Green</color></child>
								<tween type="Linear" />
							</keyframe>
							<keyframe rel-s="1.3">
								<child name="$1"><color>ff004020</color></child>
								<tween type="Linear" />
							</keyframe>
							<keyframe rel-s="1.3">
								<child name="$1"><color>Blue</color></child>
							</keyframe>
						</passthrough>
					</object>
				</children>
			</object>
			
			<object class="DisplayObjectContainer" name="$^_gameover">
				<children>
					
					<object class="TextField" name="$^_messagetext">
						<position>4,-280</position>
						<color>ff8fe100</color>
						<font>Font'uni05_53_8'</font>
						<fontSize>80</fontSize>
						<alignment>Centered</alignment>
						<verticalAlignment>Middle</verticalAlignment>
						<isTouchEnabled>false</isTouchEnabled>
						<text>Well done.</text>
					</object>
					
					<object class="Clock" name="$^_finalclock">
						<scale>3</scale>
						<position>0,-200</position>
					</object>
					
					<object class="HUDButton" name="$^_again">
						<position>0,150</position>
						<onTapCallee>HUDConfigured'theHud'</onTapCallee>
						<onTapCalleeMethodExpression>onButtonPlay</onTapCalleeMethodExpression>
						<children>
							<object class="Sprite">
								<texture>Texture'ui_button_again'</texture>
								<children>
									<object class="KeyHint" name="$^_hint">
										<texture>Texture'ui_button_keyhint_z'</texture>
										<position>-350,150</position>
									</object>
								</children>
							</object>
						</children>
					</object>
					
				</children>
			</object>
			
		</children>
		
		<isPlaying>false</isPlaying>
		<isLooping>false</isLooping>
		
		<passthrough>
			<keyframe label="playing">
				<child name="$^_controls"><position>-48,-150</position></child>
				<child name="$^_clock"><position>-48,-35</position></child>
				<child name="$^_startup"><position>-32,0</position></child>
				<child name="$^_messagehost"><position>-32,-24</position></child>
				
			</keyframe>
			<keyframe label="gameover">
				<child name="$^_controls"><position>-48,-150</position></child>
				<child name="$^_clock"><position>-48,-35</position></child>
				<child name="$^_startup"><position>-32,0</position></child>
				<child name="$^_messagehost"><position>-32,-24</position></child>
				<child name="$^_gameover"><position>-32,0</position><scale>0.75</scale><color>Invisible</color></child>
				<tween type="QuadEaseInOut" />
			</keyframe>
			<keyframe rel-s="2.0">
				<child name="$^_controls"><color>Black</color><scale>0.75</scale><position>120,-150</position></child>
				<child name="$^_clock"><color>Black</color><scale>0.75</scale><position>120,60</position></child>
				<child name="$^_startup"><position>-32,0</position><color>Invisible</color></child>
				<child name="$^_messagehost"><position>-32,24</position><color>Black</color></child>
				<child name="$^_gameover"><position>-32,0</position></child>

			</keyframe>
				
			<keyframe rel-s="0.5">
				<child name="$^_gameover"><position>-32,0</position></child>
			</keyframe>
				
		</passthrough>
		
	</class>

</objects>

