<?xml version="1.0" encoding="UTF-8" ?>

<!-- ld31 HUD -->

<objects>
	
	<class name="HUDButton" extends="SimpleButton">
		<isDragEnabled>false</isDragEnabled>
		<scale>0.25</scale>
		<passthrough>
			<keyframe label="out"><child name="$1"></child></keyframe>
			<keyframe label="disabled"><child name="$1"><color>80808080</color></child></keyframe>
			<keyframe label="down"><child name="$1"><colorAdditive>00333333</colorAdditive></child></keyframe>
			<keyframe label="up"><child name="$1"></child></keyframe>
		</passthrough>
	</class>

	<class name="KeyHint" extends="Sprite">
		<position>-104,50</position>
	</class>
	
	<class name="MessagePopup" extends="UIPopup">
		<isTouchEnabled>false</isTouchEnabled>
		<defaultShowDuration>0.25</defaultShowDuration>
		<defaultHideDuration>6</defaultHideDuration>
		<startHidden>true</startHidden>
		<startBecomeShown>true</startBecomeShown>
		<children>
			<object class="TextField" name="$^_messagetext">
				<font>Font'uni05_53_8'</font>
				<color>ff37b1ff</color>
				<fontSize>28</fontSize>
				<alignment>Centered</alignment>
				<verticalAlignment>Middle</verticalAlignment>
				<isTouchEnabled>false</isTouchEnabled>
			</object>
		</children>
	</class>

	<class name="MonsterMessagePopup" extends="MessagePopup">
		<hiddenTranslation>0,100</hiddenTranslation>
		<defaultShowDuration>1</defaultShowDuration>
		<position>0,-16</position>
		<color>ffff1800</color>
		<children>
			<object class="TextField" name="$^_messagetext">
				<font>Font'uni05_53_8'</font>
				<fontSize>48</fontSize>
				<alignment>Centered</alignment>
				<verticalAlignment>Middle</verticalAlignment>
				<isTouchEnabled>false</isTouchEnabled>
			</object>
		</children>
	</class>

	<class name="NewHumanMessagePopup" extends="MonsterMessagePopup">
		<color>Green</color>
	</class>

	<class name="HUDConfigured" extends="HUD">
		<inheritParentFrame>true</inheritParentFrame>
		<children>
			
			<!-- Control buttons -->
			
			<object class="DisplayObjectContainer" name="$^_controls">
				<ignoreFrameAttachment>false</ignoreFrameAttachment>
				<parentFrameAttachPoint>1,1</parentFrameAttachPoint>
				<position>-48,-150</position>
				<children>
					
					<object class="HUDButton" name="$^_take">
						<position>0</position>
						<onTapCallee>HUDConfigured'theHud'</onTapCallee>
						<onTapCalleeMethodExpression>onButtonTake</onTapCalleeMethodExpression>
						<children>
							<object class="Sprite">
								<texture>Texture'ui_button_take'</texture>
								<children>
									<object class="KeyHint">
										<texture>Texture'ui_button_keyhint_z'</texture>
									</object>
								</children>
							</object>
						</children>
					</object>
					
					<object class="HUDButton" name="$^_drop">
						<position>0,38</position>
						<onTapCallee>HUDConfigured'theHud'</onTapCallee>
						<onTapCalleeMethodExpression>onButtonDrop</onTapCalleeMethodExpression>
						<children>
							<object class="Sprite">
								<texture>Texture'ui_button_drop'</texture>
								<children>
									<object class="KeyHint">
										<texture>Texture'ui_button_keyhint_x'</texture>
									</object>
								</children>
							</object>
						</children>
					</object>
					
					<object class="HUDButton" name="$^_use">
						<position>0,76</position>
						<onTapCallee>HUDConfigured'theHud'</onTapCallee>
						<onTapCalleeMethodExpression>onButtonUse</onTapCalleeMethodExpression>
						<children>
							<object class="Sprite">
								<texture>Texture'ui_button_use'</texture>
								<children>
									<object class="KeyHint">
										<texture>Texture'ui_button_keyhint_c'</texture>
									</object>
								</children>
							</object>
						</children>
					</object>
				</children>
			</object>
			
			<!-- CLOCK -->
			
			<object class="DisplayObjectContainer" name="$^_clock">
				<ignoreFrameAttachment>false</ignoreFrameAttachment>
				<parentFrameAttachPoint>1,1</parentFrameAttachPoint>
				<position>-48,-35</position>
				
				<children>
					<object class="Sprite" name="$^_survived">
						<position>0</position>
						<scale>0.25</scale>
						<texture>Texture'ui_survived'</texture>
					</object>
					
					<object class="TextField" name="$^_clocktext">
						<position>0,16</position>
						
						<text>00:00:00</text>
						
						<font>Font'pixelberry8'</font>
						<fontSize>28</fontSize>
						<alignment>Centered</alignment>
						<verticalAlignment>Middle</verticalAlignment>
						<isTouchEnabled>false</isTouchEnabled>
					</object>
					
				</children>
			</object>
			
			<object class="DisplayObjectContainer" name="$^_messagehost">
				<ignoreFrameAttachment>false</ignoreFrameAttachment>
				<parentFrameAttachPoint>0,1</parentFrameAttachPoint>
				<position>-32,-24</position>
			</object>
			
			<!-- GAME START -->
			
			<object class="UIPopup" name="$^_startup">
				<position>-32,0</position>
				<isTouchEnabled>false</isTouchEnabled>
				<defaultShowDuration>0</defaultShowDuration>
				<defaultHideDuration>2</defaultHideDuration>
				<startHidden>false</startHidden>
				<children>
					<object class="MovieClip" name="$^_movement">
						<position>0,-100</position>
						<scale>0.25</scale>
						<children>
							<object class="Sprite">
								<texture>Texture'ui_hint_movement'</texture>
							</object>
						</children>
						
						<passthrough>
							<keyframe>
								<child name="$1"><color>Yellow</color></child>
								<tween type="SinEaseIn" />
							</keyframe>
							<keyframe rel-s="2">
								<child name="$1"><color>Red</color></child>
								<tween type="SinEaseOut" />
							</keyframe>
							<keyframe rel-s="2">
								<child name="$1"><color>Yellow</color></child>
							</keyframe>
						</passthrough>
					</object>
					
					<object class="MovieClip" name="$^_goal">
						<position>0,104</position>
						<scale>0.25</scale>
						<children>
							<object class="Sprite">
								<texture>Texture'ui_hint_goal'</texture>
							</object>
						</children>
						
						<passthrough>
							<keyframe>
								<child name="$1"><color>Red</color></child>
								<tween type="Linear" />
							</keyframe>
							<keyframe rel-s="1.3">
								<child name="$1"><color>Blue</color></child>
								<tween type="Linear" />
							</keyframe>
							<keyframe rel-s="1.3">
								<child name="$1"><color>Green</color></child>
								<tween type="Linear" />
							</keyframe>
							<keyframe rel-s="1.3">
								<child name="$1"><color>Red</color></child>
							</keyframe>
						</passthrough>
					</object>
				</children>
			</object>
			
		</children>
	</class>

</objects>

