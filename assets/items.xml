<?xml version="1.0" encoding="UTF-8" ?>

<!-- ld31 items -->

<objects>
	
	<class name="DoorBase" extends="Door">
		<isPlaying>false</isPlaying>
		<blocksHumans>false</blocksHumans>
		<blocksMonsters>true</blocksMonsters>
		<dieEmitterClass>ItemBreakParticles</dieEmitterClass>

		<cracksHost>DisplayObjectContainer'$^_cracksHost'</cracksHost>

		<children>
			<object class="DisplayObjectContainer" name="$^_cracksHost">
			</object>
		</children>
	</class>
	
	<class name="DoorWood" extends="DoorBase">
		<navDistanceScalar>20</navDistanceScalar>
		<maxHealth>20</maxHealth>
		<health>20</health>
		
		<passthrough>
			<keyframe label="closed">
				<texture>Texture'door'</texture>
				<textureWindow>0,0,0.5,1</textureWindow>
				<child name="$1" />
			</keyframe>
			<keyframe label="open">
				<texture>Texture'door'</texture>
				<textureWindow>0.5,0,1,1</textureWindow>
			</keyframe>
		</passthrough>
	</class>

	<class name="DoorIron" extends="DoorBase">
		<navDistanceScalar>40</navDistanceScalar>
		<maxHealth>50</maxHealth>
		<health>50</health>
		<passthrough>
			<keyframe label="closed">
				<texture>Texture'door_iron'</texture>
				<textureWindow>0,0,0.5,1</textureWindow>
				<child name="$1" />
			</keyframe>
			<keyframe label="open">
				<texture>Texture'door_iron'</texture>
				<textureWindow>0.5,0,1,1</textureWindow>
			</keyframe>
		</passthrough>
	</class>

	<class name="BlockBase" extends="Item">
		<blocksHumans>true</blocksHumans>
		<blocksMonsters>true</blocksMonsters>
		<dieEmitterClass>ItemBreakParticles</dieEmitterClass>

		<navDistanceScalar>30</navDistanceScalar>

		<texture>Texture'blocks'</texture>
	</class>
	
	<class name="BlockGravel" extends="BlockBase">
		<textureWindow>0,0,0.25,1</textureWindow>
		<maxHealth>30</maxHealth>
		<health>30</health>
	</class>

	<class name="BlockBrick" extends="BlockBase">
