		<blocksMonsters>false</blocksMonsters>
		<dieEmitterClass>ItemBreakParticles</dieEmitterClass>

		<lightClass>LightTorch</lightClass>
		<lightColor>Red</lightColor>
		<lightWobble>0</lightWobble>
